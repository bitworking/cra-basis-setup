{
  "name": "cra-basis-setup",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "lodash": "^4.10.0",
    "prop-types": "^15.5.10",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "styled-components": "^2.0.0"
  },
  "devDependencies": {
    "backstopjs": "^2.6.11",
    "eslint-config-airbnb": "^15.0.1",
    "flow-bin": "^0.47.0",
    "husky": "^0.13.4",
    "jest-junit-reporter": "^1.1.0",
    "lint-staged": "^3.6.0",
    "prettier": "^1.4.2",
    "react-scripts": "1.0.7",
    "react-styleguidist": "^5.3.2",
    "react-test-renderer": "^15.5.4",
    "webpack": "^2.6.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "visreg:ref": "backstop reference --config=test/backstop.config.js",
    "visreg:test": "backstop test --config=test/backstop.config.js",
    "visreg:open": "backstop openReport --config=test/backstop.config.js",
    "visreg:approve": "backstop approve --config=test/backstop.config.js",
    "coverage": "react-scripts test --coverage",
    "coverage:ci": "react-scripts test --coverage --testResultsProcessor=./node_modules/jest-junit-reporter",
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build",
    "precommit": "lint-staged",
    "prettier": "prettier --write --print-width 120 --single-quote --trailing-comma es5 'src/**/*.js'",
    "flow": "flow"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write --print-width 120 --single-quote --trailing-comma es5",
      "git add"
    ]
  }
}
